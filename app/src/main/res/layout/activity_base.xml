<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_background"
    tools:context=".Base_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:text="Trace N' Learn"

            android:textAlignment="center"
            android:textSize="30sp"

            />
<ImageView
    android:id="@+id/profile"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_marginTop="-119dp"
    android:layout_marginLeft="-80dp"
    android:src="@drawable/profile"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="-40dp"
            android:textStyle="bold"

            android:text="Username"
            android:paddingTop="10dp"
            android:paddingLeft="40dp"
            android:layout_marginLeft="45dp"
            android:background="@xml/block1"
            android:textAlignment="center"
            android:textSize="25sp"


            />

        <ImageView
            android:layout_width="74dp"
            android:layout_height="94dp"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="-97dp"
            android:src="@drawable/cat"

            />



        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/flower_yes"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="285dp"

            />

        <TextView
            android:id="@+id/flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="155dp"
            android:text="26/26"
            android:textSize="20dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:text="SELECT MODE"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/freeplay"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"

            android:text="FREEPLAY"
            android:paddingTop="10dp"
            android:paddingLeft="-150dp"
            android:layout_marginLeft="45dp"
            android:background="@xml/block3"
            android:textAlignment="center"
            android:textSize="25sp"


            />


        <ImageView
            android:layout_width="330dp"
            android:layout_height="93dp"

            android:src="@drawable/grass3"
            android:layout_marginTop="-95dp"
            android:layout_marginLeft="31dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-124dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/lizard"/>
        <TextView
            android:id="@+id/chosen"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="-20dp"
            android:textStyle="bold"

            android:text="OPEN"
            android:paddingTop="10dp"
            android:paddingLeft="-200dp"
            android:layout_marginLeft="45dp"
            android:background="@xml/block2"
            android:textAlignment="center"
            android:textSize="25sp"


            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_marginTop="-140dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/snake"/>
    </LinearLayout>
</ScrollView>